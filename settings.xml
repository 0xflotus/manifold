<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd">
  <servers>
    <server>
      <id>ossrh</id>
      <username>${env.MANIFOLD_SNAPSHOT_USER}</username>
      <password>${env.MANIFOLD_SNAPSHOT_PASS}</password>
    </server>
    <server>
      <id>manifold-snapshots</id>
      <username>${env.MANIFOLD_BINTRAY_USER}</username>
      <password>${env.MANIFOLD_BINTRAY_API_KEY}</password>
    </server>
    <server>
      <id>bintray-${env.MANIFOLD_BINTRAY_USER}-manifold</id>
      <username>${env.MANIFOLD_BINTRAY_USER}</username>
      <password>${env.MANIFOLD_BINTRAY_API_KEY}</password>
    </server>
  </servers>
</settings>